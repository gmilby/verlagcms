%html
  %head
    %title Verlag CMS &ndash; #{current_site.name}#{@title.nil? ? '' :  "&ndash; #{@title}"}
    %link{ :rel => 'stylesheet', :href => "/admin/css/verlag.css", :type => 'text/css' }    
     
    // Ace
