      %script{ :src => '/javascripts/collections/folders.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/collections/assets.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/collections/templates.js', :type => 'text/javascript', :charset => 'utf-8' }
      
      // Views
      %script{ :src => '/javascripts/views/pages/index.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/pages/show.js', :type => 'text/javascript', :charset => 'utf-8' }      
      %script{ :src => '/javascripts/views/folders/show.js', :type => 'text/javascript', :charset => 'utf-8' }
