    %link{ :rel => 'stylesheet', :href => "/admin/css/verlag.css", :type => 'text/css' }    
     
    // Ace
    %script{ :src => '/javascripts/ace.js', :type => 'text/javascript', :charset => 'utf-8' }
   
    - if RACK_ENV != 'development'
      %script{ :src => '/javascripts/admin.min.js', :type => 'text/javascript', :charset => 'utf-8' }
    - else   
      -# %script{ :src => '/javascripts/admin.js', :type => 'text/javascript', :charset => 'utf-8' } 
    
      // Verlag
      %script{ :src => '/javascripts/lib/verlag.js', :type => 'text/javascript', :charset => 'utf-8' }  
      
      // Libraries
