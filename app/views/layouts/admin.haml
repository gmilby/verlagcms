      %script{ :src => '/javascripts/admin.min.js', :type => 'text/javascript', :charset => 'utf-8' }
    - else   
      -# %script{ :src => '/javascripts/admin.js', :type => 'text/javascript', :charset => 'utf-8' } 
    
      // Verlag
      %script{ :src => '/javascripts/lib/verlag.js', :type => 'text/javascript', :charset => 'utf-8' }  
      
      // Libraries
      %script{ :src => '/javascripts/vendor/jquery-1.7.1.min.js', :type => 'text/javascript', :charset => 'utf-8' }  
      %script{ :src => '/javascripts/vendor/hogan.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/vendor/underscore.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/vendor/backbone.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/vendor/modernizr.custom.00537.js', :type => 'text/javascript', :charset => 'utf-8' }

      // Models
      %script{ :src => '/javascripts/models/page.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/models/user.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/models/folder.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/models/asset.js', :type => 'text/javascript', :charset => 'utf-8' }
      
      // Collections 
      %script{ :src => '/javascripts/collections/pages.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/collections/folders.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/collections/assets.js', :type => 'text/javascript', :charset => 'utf-8' }
      
      // Views
      %script{ :src => '/javascripts/views/page_index.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/page_preview.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/folder_index.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/folder.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/asset.js', :type => 'text/javascript', :charset => 'utf-8' }
      
      // Main application script
      %script{ :src => '/javascripts/lib/modal.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/lib/router.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/application.js', :type => 'text/javascript', :charset => 'utf-8' }  
        
    -# This is where the mustache templates are rendered  
    = yield_content :head


  %body
    .wrapper
      #header 
        .notice
        %h1
          - if authenticated?
            = current_user.email
          %a{ :href => "http://#{current_site.domain}/", :target => '_blank' }= current_site.name   
        - if authenticated?
          #tabs        
            %a.tab{ :id => 'pages-tab', :href => '/admin/pages' } Pages 
            %a.tab{ :id => 'assets-tab', :href => '/admin/folders' } Images 
            %a.tab{ :id => 'templates-tab', :href => '/admin/templates' } Design
            -# %a.tab{ :id => 'files-tab', :href => '/admin/assets' } Files 
            %a.tab{ :id => 'users-tab', :href => '/admin/users' } Users 
            %a.tab{ :id => 'sites-tab', :href => '/admin/sites' } Sites
        = yield_content :header
