      %script{ :src => '/javascripts/views/folders/index.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/assets/show.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/design/index.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/design/edit.js', :type => 'text/javascript', :charset => 'utf-8' }
      %script{ :src => '/javascripts/views/remove/index.js', :type => 'text/javascript', :charset => 'utf-8' }
      
      
      
      // Lib
      %script{ :src => '/javascripts/lib/editor.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/lib/iframe.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/lib/modal.js', :type => 'text/javascript', :charset => 'utf-8' } 
      %script{ :src => '/javascripts/lib/router.js', :type => 'text/javascript', :charset => 'utf-8' } 
      
      // Main application script
      %script{ :src => '/javascripts/application.js', :type => 'text/javascript', :charset => 'utf-8' }  
        
    -# This is where the mustache templates are rendered  
    = yield_content :head


  %body
    .wrapper
      %header.navbar.navbar-fixed-top
        .navbar-inner
          .container
            %h1
              - if authenticated?
                = current_user.email
              %a{ :href => "http://#{current_site.domain}/", :target => '_blank' }= current_site.name   
            - if authenticated?
              .nav      
                %a.tab{ :id => 'pages-tab', :href => '/admin/pages' } Pages 
                %a.tab{ :id => 'assets-tab', :href => '/admin/folders' } Files 
                %a.tab{ :id => 'templates-tab', :href => '/admin/templates' } Design
                %a.tab{ :id => 'users-tab', :href => '/admin/users' } Users 
                %a.tab{ :id => 'sites-tab', :href => '/admin/sites' } Sites
            = yield_content :header
