#login
  %h1 Login   
  
  %form{ :action => '/login', :method => 'post' }
    .field
      %label Email
      %input{ :type => 'text', :name => 'username', :value => @email }
    .field    
      %label Password
      %input{ :type => 'password', :name => 'password' }  
    .field    
      %input{ :type => 'submit', :value => 'submit' }