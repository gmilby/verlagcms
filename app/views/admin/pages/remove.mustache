{{#page}}   
  <h2>Remove Page</h2>
  <form method="post" action="#/pages/{{id}}" enctype="multipart/form-data" id="remove-part">
    <div class="hidden">                   
      <input type="hidden" name="_method" value="delete" />
    </div>
    <div class="note"> 
      Are you sure you want to delete this page?
    </div>
    <div class="buttons">
      <input type="submit" value="Delete" class="button html-only" />
      <a href="#/pages" class="cancel">Cancel</a>
    </div>
  </form>  
{{/page}}