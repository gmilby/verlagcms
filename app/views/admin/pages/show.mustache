{{#page}}  

<div id="preview-{{id}}" class="preview">
  <div class="loader">LOADING</div>
  <iframe src="/preview{{path}}?edit=true">LOADING</iframe>
</div>  
 
<div id="page-editor">
  <h1 class="title">Page Preview: {{title}}</h2>
  <div>
    <ul class="tab-control" id="page-part-tabs">
    {{#parts}}
      <li><a href="#/pages/{{page_id}}/parts/{{id}}/edit">{{name}}</a></li>
    {{/parts}}  
    </ul>
    {{#parts}}
      <div class="tab">{{content}}</div>
    {{/parts}}
    <ul class="tab-control" id="page-property-tabs">
      <li><a href="#{{admin_path}}/edit">Edit Page Properties</a></li>
      <li><a href="#{{admin_path}}/assets">Page Attachments</a></li>
    </ul>
  </div>
</div> 
{{/page}}
