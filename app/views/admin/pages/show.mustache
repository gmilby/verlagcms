{{#page}}  

<div id="preview-{{id}}" class="preview">
  <div class="loader">LOADING</div>
  <iframe src="/preview{{path}}?edit=true" id="page-preview">LOADING</iframe>
</div>   
<div id="page-editor">
  <form action="#/pages/{{id}}" method= "post" id="edit-page" class="command-save autosave">  
    <div class="hidden">
      <input type="hidden" name="_method" value="put" /> 
      <input type='hidden' name='page[assets_list]' id='page-asset-ids' value="{{assets_list}}" class='hidden' />
      <input type="hidden" id="page-updated_at" name="page[updated_at]" value="{{updated_at}}" /> 
    </div> 
    <div class="field" id="page-title-field">   
      <label for='page_title'>Title</label> 
      <input type="text" id="page-title" name="page[title]" value="{{title}}" class="textfield" disabled="disabled" />  
      <a class="toggle-page-editor" href="#/pages/{{id}}/edit">Edit Page</a>
    </div> 

    <div id="extra-info">
      <div class="field"> 
        <label for="page-slug">Slug</label>
        <input type="text" id="page-slug" name="page[slug]" value="{{slug}}" class="textfield" />  
      </div>   
      <div class="field">
        <label for='page_tags'>Tags</label> 
        <input type='text' name='page[tag_list]' id='page-tag-list' value="{{tag_list}}" class='textfield' /> 
      </div>
      <div class="select-boxes">
        <label for='page_layout'>Layout</label> 
        <select id="page-layout" class="select" name="page[layout_id]"> 
          {{#layouts}}
          <option value="{{id}}" {{selected}}>{{name}}</option>
          {{/layouts}}
        </select>  
      </div>
    </div> 
    <div class="">
      <input type="submit" id="page_save" value="Save" class="button" />   
      <a class="toggle-page-editor" href="#/pages/{{id}}">Cancel</a>
    </div>
  </form>
</div> 
{{/page}}
