<li class="node level-{{level}}" id="page-{{id}}"> 
  <div class="item">
    {{# child? }}{{# children? }}
      <span style="padding-left: {{padding}}px;" class="opener{{# open? }} open {{/ open? }}">+</span>
    {{/ children? }}{{/ child? }}
    <span class="title" style="padding-left: {{padding}}px;"> 
       <a rel="edit_page" id="edit-{{id}}" href="{{admin_path}}">{{title}}</a>  
       <a id="add-child-{{id}}" class="add-child" href="{{admin_path}}/new">+</a>  
       {{^ root? }}<a id="remove-{{id}}" class="remove" href="{{admin_path}}/remove">x</a>{{/ root? }}
    </span>
    {{# children? }}
    <span class="count" style="padding-left: {{padding}}px;">
      {{child_count}} Children
    </span>
    {{/ children? }}
  </div>
  {{# children? }}
  <ul class="page-children">
    {{# children }}
      {{> node }}
    {{/ children }}
  </ul>
  {{/ children? }}
</li>