<div id="overlay">
  <div class="modal">
  {{# model }}
    <h2>Remove </h2>
    <form method="post" action="{{ admin_url }}" enctype="multipart/form-data" class="remove">
      <div class="hidden">                   
        <input type="hidden" name="_method" value="delete" />
      </div>
      <div class="note"> 
        Are you sure you want to delete <strong>{{ name }}</strong>?
      </div>
      <div class="buttons">
        <button type="submit" class="btn">Remove</button>
        <a href="#" class="cancel">Cancel</a>
      </div>
    </form>  
  {{/ model }}
  </div>
</div>