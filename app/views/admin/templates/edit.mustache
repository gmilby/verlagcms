{{#layout}} 
<form action="/admin/templates/{{id}}" method= "post" id="edit-layout" class="command-save">  
<div class="toolbar">
  <div class="title">
    <!--label for="layout_name">Name</label-->
    <input type="text" id="layout_name" name="layout[name]" value="{{name}}" class="textfield" />
  </div>
  <ul class="tab-control">
    {{# layout? }}
      <li><a class="tab active editor" href="#code-editor">editor</a></li>
      <li><a class="tab properties" href="#parts">default parts</a></li>
    {{/ layout? }}
    {{^ layout? }}
      <li><a href="#">&nbsp;</a></li>
    {{/ layout? }}
  </ul>
</div>    
<div id="code-editor" class="{{klass}} pane">
  
    <div class="hidden">
      <input type="hidden" name="_method" value="put" /> 
      <input type="hidden" id="layout-updated_at" name="layout[updated_at]" value="{{updated_at}}" />
    </div>
      
    {{^ path }}
    <div class="code">   
      <pre id="layout_content" class="{{mode}}"></pre>
      <noscript><textarea id="textarea_content" class="{{mode}}"></textarea></noscript>
    </div>     
    {{/ path }}
    {{# path }}
    <div class="image">   
      <h2>{{name}} ({{file_type}}): </h2>     
      
      <p><a href="{{path}}">{{path}}</a></p> 
      {{# image }}
        <img src="{{path}}" alt="{{title}}" />
      {{/ image }}  
    </div>     
    {{/ path }}
    
    <div class="buttons"> 
      <div class="field"> 
        <input type="submit" id="save-layout" value="Save" class="save button" /> 
        <select class="select" name="layout[filter]"> 
          {{#filters}}
          <option value="{{value}}" {{selected}}>{{name}}</option>
          {{/filters}}
        </select>
 
      </div>
    </div>
  
</div>  
</form>  

{{#layout?}}
<div id="parts" class="{{klass}} pane" style="display:none">
  <h1>Parts</h2>
  <ul>
    {{#part_types}}  
    <li>
      {{name}} - {{kind}} <a href="/admin/templates/{{template_id}}/part_types/{{id}}/remove">remove</a>    
    </li> 
    {{/part_types}}  
  </ul>
  <div id="add-layout-part">
    <form id="new-layout-part" action="#/layouts/{{id}}/parts" method="post">   
      <div class="hidden">
        <input type="hidden" name="part[template_id]" value="{{id}}" />
      </div>
      <div class="field">
        <select name="part[kind]">
          <option value="Part">Text Area</option>
          <option value="ImagePart">Image</option>
          <option value="MultiImagePart">Gallery</option>
        </select>
      </div>
      <div class="field">
        <input type="text" name="part[name]" />
      </div>  
      <div class="field">
        <input type="submit" value="Create" />
      </div>
    </form>
  </div>
</div>  
{{/layout?}}

{{/layout}}