<div class="hidden">
  <input type="hidden" id="template-klass" name="klass" value="{{ klass }}" class="hidden" />   
</div>

<div class="control-group"> 
  <label class="control-label" for="template-name">Name</label>
  <div class="controls">
    <input type="text" id="template-name" name="name" value="{{ name }}" class="textfield" />  
  </div>
</div>

<div>
  <p>
    Short description of what parts are and what they do.
  </p>
  <div class="parts-list clearfix">
    {{> part_types }}
  </div>
</div>

<div class="btn-toolbar add-parts">
  <input type="text" id="new-part-type" value="" class="textfield " placeholder="Part Name"> 
  <div class="btn-group">
  {{# types }}
    <button class="btn js-set-part" title="{{ name }}" data-klass="{{ klass }}">{{ name }}</button> 
  {{/ types }}
  </div> 
  <button class="btn-primary btn js-add-part">Add</button>
</div>





