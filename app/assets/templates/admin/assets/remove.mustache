{{#asset}}
<div class="modal-strip fade-in remove" id="remove-modal-{{id}}">
  <div class="icon" id="image-icon-{{id}}">
    <img src="/images/icons/{{id}}/{{file_name}}" alt="{{title}}" />
  </div>
  <div class="image-info" id="image-info-{{id}}">
    <form method="post" action="/admin/assets/{{id}}" enctype="multipart/form-data" id="delete-asset">
      <div class="hidden">
        <input type="hidden" name="_method" value="delete" />  
        <input type="hidden" name="query" value="{{query}}" />  
      </div>  
      <div class="">
        <label>Are you sure you want to delete this item?</label>
        <a href="/admin/folders/{{folder_id}}" class="cancel close-modal-strip">Cancel</a> 
        or
        <input type="submit" value="Delete" class="button" />  
            
      </div>
    </form>   
    <div class="notice"></div>
  </div>                      
</div>
{{/asset}}

